{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "app",
    "headers": [
        {
            "source" : "**/*.@(html|js|jpg)",
            "headers" : [
                {
                    "key" : "Cache-Control",
                    "value" : "no-cache, no-store, must-revalidate"
                }
            ]
        }
    ]
  }
}
